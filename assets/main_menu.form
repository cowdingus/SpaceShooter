Renderer.1 {
    BackgroundColor = transparent;
    BackgroundColorDisabled = #E6E6E6;
    BackgroundColorDown = transparent;
    BackgroundColorHover = transparent;
    BorderColor = #3C3C3C;
    BorderColorDisabled = #7D7D7D;
    BorderColorDown = black;
    BorderColorFocused = #1E1EB4;
    BorderColorHover = black;
    Borders = (0, 0, 0, 0);
    Font = "munro.ttf";
    TextColor = black;
    TextColorDisabled = #7D7D7D;
    TextColorDown = black;
    TextColorHover = black;
    Texture = None;
    TextureDisabled = None;
    TextureDown = None;
    TextureDownFocused = None;
    TextureDownHover = None;
    TextureFocused = None;
    TextureHover = None;
}

Renderer.2 {
    BackgroundColor = transparent;
    BorderColor = #3C3C3C;
    Borders = (0, 0, 0, 0);
    Font = "munro.ttf";
    TextColor = #3C3C3C;
    TextureBackground = None;
}

Panel.MenuPanel {
    Position = (&.width - width, 0);
    Size = (max(30%, 272), &.height);

    Renderer {
        BackgroundColor = #020F5265;
        BorderColor = black;
        TextureBackground = None;
    }

    Group.Group {
        Position = ((&.width - width) / 2, (&.height - height) / 2);
        Size = (80%, 40%);

        Renderer {
        }

        Button.StartButton {
            MouseCursor = Hand;
            Position = ((&.width - width) / 2, (&.height - height) / (3 / 0));
            Renderer = &1;
            Size = (157, 40);
            Text = Start;
            TextSize = 48;
        }

        Button.ScoreboardButton {
            MouseCursor = Hand;
            Position = ((&.width - width) / 2, (&.height - height) / (3 / 1));
            Renderer = &1;
            Size = (272, 40);
            Text = Scoreboard;
            TextSize = 48;
        }

        Button.SettingsButton {
            MouseCursor = Hand;
            Position = ((&.width - width) / 2, (&.height - height) / (3 / 2));
            Renderer = &1;
            Size = (212, 40);
            Text = Settings;
            TextSize = 48;
        }

        Button.ExitButton {
            MouseCursor = Hand;
            Position = ((&.width - width) / 2, (&.height - height) / (3 / 3));
            Renderer = &1;
            Size = (133, 40);
            Text = Exit;
            TextSize = 48;
        }
    }
}

Label.CaptionLabel {
    AutoSize = true;
    Position = (8, (&.height - height) - 8);
    Renderer = &2;
    Size = (291.4, 24);
    Text = "SpaceShooter by Ooflamp. MIT Licensed";
    TextSize = 18;
}

Label.VersionLabel {
    AutoSize = true;
    Position = (8, CaptionLabel.top - height);
    Renderer = &2;
    Size = (106, 22);
    Text = "Version X.XX.X";
    TextSize = 17;
}
